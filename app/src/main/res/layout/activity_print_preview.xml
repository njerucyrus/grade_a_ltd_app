<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.me.njerucyrus.gradea.PrintPreviewActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >
        <TextView
            android:id="@+id/mCompanyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Company Name: Grade (A) Kenya Ltd"
            android:textColor="@color/colorBlack"
            android:layout_margin="5dp"
            />
        <TextView
            android:id="@+id/mPayeeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payee Name: "
            android:textColor="@color/colorBlack"
            android:layout_margin="5dp"
            />

        <TextView
            android:id="@+id/mPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone Number: "
            android:textColor="@color/colorBlack"
            android:layout_margin="5dp"
            />
        <TextView
            android:id="@+id/mDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:text="Description: "
            android:layout_margin="5dp"
            />
        <TextView
            android:id="@+id/mAuthorisedBy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:text="Authorized by: "
            android:layout_margin="5dp"
            />
        <TextView
            android:id="@+id/mReceiptNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Receipt No:  "
            android:textColor="@color/colorBlack"
            android:layout_margin="5dp"
            />
        <TextView
            android:id="@+id/mPesa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mpesa ID:  "
            android:textColor="@color/colorBlack"
            android:layout_margin="5dp"
            />
        <TextView
            android:id="@+id/mProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:text="Products:  "
            android:layout_margin="5dp"
            />

        <TextView
            android:id="@+id/mPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price: Ksh "
            android:textColor="@color/colorBlack"
            android:layout_margin="5dp"
            />

        <TextView
            android:id="@+id/mDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textColor="@color/colorBlack"
            android:layout_margin="5dp"
            />

        <Button
            android:id="@+id/Scan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Select Printer"
            android:background="@xml/button_bg_lg"
            android:textColor="@color/colorWhite"
            android:layout_margin="5dp"

            />

        <Button
            android:id="@+id/mPrint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Print Receipt"
            android:background="@xml/button_bg_black_lg"
            android:textColor="#fff"
            android:layout_margin="5dp"

            />
    </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
