<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.me.njerucyrus.gradea.PrintPreviewActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:text="Print Preview"
            />
        <TextView
            android:id="@+id/mPayeeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payee Name: Daniel M "
            android:layout_margin="15dp"
            />

        <TextView
            android:id="@+id/mPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone Number: O703191981 "
            android:layout_margin="15dp"
            />
        <TextView
            android:id="@+id/mDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description: Bought some products. "
            android:layout_margin="15dp"
            />
        <TextView
            android:id="@+id/mAuthorisedBy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Authorized by: John Doe"
            android:layout_margin="15dp"
            />
        <TextView
            android:id="@+id/mReceiptNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Receipt No: K38494# "
            android:layout_margin="15dp"
            />
        <TextView
            android:id="@+id/mProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Products: 3 Bugs of Cement "
            android:layout_margin="15dp"
            />

        <TextView
            android:id="@+id/mPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price: Ksh 2500"
            android:layout_margin="15dp"
            />

        <Button
            android:id="@+id/btnPrint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:text="Print"
            android:textColor="#fff"
            android:layout_margin="15dp"
            />
    </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
